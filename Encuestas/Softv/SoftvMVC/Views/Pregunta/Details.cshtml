@model Softv.Entities.PreguntaEntity

@{

}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
  @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {
        //pone los check
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
    });
</script>
<div>
    <div class="containerDivGrey">
        <table style="width:auto">

            <tr>
                <td style="text-align:right">
                    <strong>@Html.Label("Pregunta")</strong>:                    
                </td>
                <td>
                    @Html.DisplayFor(model => model.Pregunta)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.Label("Cerrada")</strong>:                    
                </td>
                <td>
                    @Html.DisplayFor(model => model.Cerrada)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">                    
                    <strong>@Html.Label("Opción Multiple")</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.OpcMultiple)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">                    
                    <strong>@Html.Label("Abierta")</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Abierta)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.Label(" Tipo Pregunta")</strong>:                   
                </td>
                <td>
                    @Html.DisplayFor(model => model.TipoPreguntas.Descripcion)
                </td>
            </tr>

        </table>
    </div>
</div>
