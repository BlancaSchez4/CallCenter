@model Softv.Entities.UsuarioEntity

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
    @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {

        $("#IdRol").select2({ placeholder: "Selecciona Role", width: "50%", formatNoMatches: "No hay Resultados" });

        //pone los check
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
    });
</script>
<style>
    #btn-guardar {
        background-color: #e4ac12;
        color: #ffffff;
        border-color: #e4ac12;
    }

    .panel-default > .panel-heading {
        color: #F5F5F5;
        background-color: #D8D8D8;
        border-color: #ddd;
    }

    #contenido {
        padding: 20px;
        margin-left: 20px;
    }
</style>

@using (Html.BeginForm())
{

    <div class="row" style="margin-top:50px;">

        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><p style="font-size: 20px; padding-bottom: 0px; color:#ffffff; background-color: -webkit-linear-gradient(top,#F5F5F5,#D8D6D6);">Nuevo Usuario</p></div>
                <div class="panel-body" id="contenido">

                    @Html.ValidationSummary(true)

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.IdUsuario)
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.IdUsuario)
                            @Html.ValidationMessageFor(model => model.IdUsuario)
                        </div>
                    </div>

                    <label>Nombre</label>
                    <div class="form-group">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", style = " width:35%", required = "required" })
                            @Html.ValidationMessageFor(model => model.Nombre)
                    </div>

                    <label>Email:</label>
                    <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", style = " width:35%", required = "required" })
                            @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <label>Usuario</label>
                    <div class="form-group">
                            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", style = " width:35%", required = "required" })
                            @Html.ValidationMessageFor(model => model.Usuario)
                    </div>

                    <label>Password</label>
                    <div class="form-group">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", style = " width:35%", required = "required" })
                            @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.Estado)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Estado)
                            @Html.ValidationMessageFor(model => model.Estado)
                        </div>
                    </div>

                    <label>Rol</label>
                    <div class="form-group">
                            @Html.DropDownListFor(model => model.IdRol, (SelectList)ViewBag.VBRole, String.Empty, new { required = "required" })
                            @Html.ValidationMessageFor(model => model.IdRol)
                    </div>

                </div>
                <div class="panel-footer" style="text-align:right;">
                    <input type="submit" value="Guardar" class="btn btn-default" /> |
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })

                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
}
