@model Softv.Entities.UsuarioEntity

@{

}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
  @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {
        //pone los check
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
    });
</script>
<div>
    <div class="containerDivGrey">
        <table style="width:auto">

            <tr>
                <td style="text-align:right">
                    <strong>@Html.DisplayNameFor(model => model.Nombre)</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Nombre)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.DisplayNameFor(model => model.Email)</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.DisplayNameFor(model => model.Usuario)</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Usuario)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.DisplayNameFor(model => model.Password)</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Password)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.Label("Role")</strong>:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Role.Nombre)
                </td>
            </tr>

            <tr>
                <td style="text-align:right">
                    <strong>@Html.Label("Estado")</strong>:
                </td>
                <td>
                    @Html.CheckBoxFor(model => model.Estado.Value, new { disabled = "disabled" })
                </td>
            </tr>

        </table>
    </div>
</div>
