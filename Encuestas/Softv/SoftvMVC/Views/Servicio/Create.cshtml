@model Softv.Entities.ServicioEntity

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
    @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {

    //pone los check
    $('input').iCheck({
    checkboxClass: 'icheckbox_square-red',
    radioClass: 'iradio_square-red',
    });
    });
</script>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <br />
        <br />
        <p style="font-size: 20px; padding-bottom: 0px; color: rgb(138, 136, 136);">Nuevo Servicio</p>
        <hr />
        @Html.ValidationSummary(true)
        <div class="containerDivGrey">


            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.Clv_Servicio, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Clv_Servicio, new { @class = "inputObli" })
                    @Html.ValidationMessageFor(model => model.Clv_Servicio)
                </div>
            </div>

            <table style="width:80%">

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayClv_TipSer)
                    </td>
                    <td style="width:25%">
                        @Html.TextBoxFor(model => model.Clv_TipSer, new { type = "number", @min = "1", @class = "inputObli" })
                        @Html.ValidationMessageFor(model => model.Clv_TipSer)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayDescripcion)
                    </td>
                    <td style="width:25%">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "inputObli" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayClv_Txt)
                    </td>
                    <td style="width:25%">
                        @Html.TextBoxFor(model => model.Clv_Txt, new { @class = "inputObli" })
                        @Html.ValidationMessageFor(model => model.Clv_Txt)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayAplicanCom)
                    </td>
                    <td style="width:25%">
                        @Html.CheckBox("AplicanCom", new { id = "AplicanCom" }) <img src="@Url.Content("~/Content/images/iblue.png")" height="20" width="20" id="iAplicanCom" />
                        @Html.ValidationMessageFor(model => model.AplicanCom)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplaySale_en_Cartera)
                    </td>
                    <td style="width:25%">
                        @Html.CheckBox("Sale_en_Cartera", new { id = "Sale_en_Cartera" }) <img src="@Url.Content("~/Content/images/iblue.png")" height="20" width="20" id="iSale_en_Cartera" />
                        @Html.ValidationMessageFor(model => model.Sale_en_Cartera)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayPrecio)
                    </td>
                    <td style="width:25%">
                        @Html.TextBoxFor(model => model.Precio, new { @class = "inputObli" })
                        @Html.ValidationMessageFor(model => model.Precio)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayGenera_Orden)
                    </td>
                    <td style="width:25%">
                        @Html.CheckBox("Genera_Orden", new { id = "Genera_Orden" }) <img src="@Url.Content("~/Content/images/iblue.png")" height="20" width="20" id="iGenera_Orden" />
                        @Html.ValidationMessageFor(model => model.Genera_Orden)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayEs_Principal)
                    </td>
                    <td style="width:25%">
                        @Html.CheckBox("Es_Principal", new { id = "Es_Principal" }) <img src="@Url.Content("~/Content/images/iblue.png")" height="20" width="20" id="iEs_Principal" />
                        @Html.ValidationMessageFor(model => model.Es_Principal)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @Html.Label((String)ViewBag.DisplayClv_Trabajo)
                    </td>
                    <td style="width:25%">
                        @Html.TextBoxFor(model => model.Clv_Trabajo, new { type = "number", @min = "1", @class = "inputObli" })
                        @Html.ValidationMessageFor(model => model.Clv_Trabajo)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

            </table>

        </div>
    </div>
    <div class="containerDivGrey">
        <input type="submit" value="Guardar" class="btnCreate" /> |
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
    </div>

}
