                @*@Html.Label((String)ViewBag.DisplayFechaApli)*@
                Fecha Aplicación
            </td>
            <td style="width:25%">
                <input type="text" id="FechaAplitxt" class="inputSearch" autocomplete="off" placeholder="Buscar" />
            </td>
