@model Softv.Entities.RelEncuestaClientesEntity

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
    @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {

        $("#IdEncuesta").select2({ placeholder: "Selecciona @((String)ViewBag.DisplayEncuesta)", width: "250px", formatNoMatches: "No hay Resultados" });

        //pone los check
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
    });
</script>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <br />
        <br />
        <p style="font-size: 20px; padding-bottom: 0px; color: rgb(138, 136, 136);">Nuevo RelEncuestaClientes</p>
        <hr />
        @Html.ValidationSummary(true)
        <div class="containerDivGrey">


            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.IdProceso, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.IdProceso, new { @class = "inputObli" })
                    @Html.ValidationMessageFor(model => model.IdProceso)
                </div>
            </div>

            <table style="width:80%">

                <tr>
                    <td style="width:12%">
                        @*@Html.Label((String)ViewBag.DisplayFechaApli)*@
                        Fecha Aplicación
                    </td>
                    <td style="width:25%">
                        @Html.TextBoxFor(model => model.FechaApli, new { @class = "inputObli" })
                        @Html.ValidationMessageFor(model => model.FechaApli)
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

                <tr>
                    <td style="width:12%">
                        @*@Html.Label((String)ViewBag.DisplayEncuesta)*@
                        Encuesta
                    </td>
                    <td style="width:25%">
                        <div style="width:280px">
                            @Html.DropDownListFor(model => model.IdEncuesta, (SelectList)ViewBag.VBEncuesta, String.Empty)
                            @Html.ValidationMessageFor(model => model.IdEncuesta)
                        </div>
                    </td>
                    <td style="width:25%"></td>
                    <td style="width:25%"></td>
                </tr>

            </table>

        </div>
    </div>
    <div class="containerDivGrey">
        <input type="submit" value="Guardar" class="btnCreate" /> |
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
    </div>

}
