@model Softv.Entities.EncuestaEntity

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
    @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {

        $("#IdUsuario").select2({ placeholder: "Selecciona @((String)ViewBag.DisplayUsuario)", width: "80%", formatNoMatches: "No hay Resultados" });

        //pone los check
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
    });
</script>

<style>
    #btn-guardar {
        background-color: #e4ac12;
        color: #ffffff;
        border-color: #e4ac12;
    }

    .panel-default > .panel-heading {
        color: #F5F5F5;
        background-color: #D8D8D8;
        border-color: #ddd;
    }

    #contenido {
        padding: 20px;
        margin-left: 20px;
    }
</style>


@using (Html.BeginForm())
{
    <div class="row" style="margin-top:50px;">

        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><p style="font-size: 20px; padding-bottom: 0px; color:#ffffff; background-color: -webkit-linear-gradient(top,#F5F5F5,#D8D6D6);">Editar Encuesta</p></div>
                <div class="panel-body" id="contenido">

                    @Html.ValidationSummary(true)
                    <p class="help-block">Actualiza los campos necesarios:</p><br><br>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.IdEncuesta, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.IdEncuesta, new { @class = "inputObli" })
                            @Html.ValidationMessageFor(model => model.IdEncuesta)
                        </div>
                    </div>


                    <div class="form-group">
                        <label>Título Encuesta</label>
                        @Html.TextBoxFor(model => model.TituloEncuesta, new { @class = "form-control", style = " width:45%", required = "required" })
                        @Html.ValidationMessageFor(model => model.TituloEncuesta)
                    </div>

                    <div class="form-group">
                        <label>Descripción</label>
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", style = " width:45%", required = "required" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>

                    <div class="form-group">
                        <label>Fecha Creación</label>
                        @Html.TextBoxFor(model => model.FechaCreacion, new { @class = "form-control", style = " width:45%", required = "required" })
                        @Html.ValidationMessageFor(model => model.FechaCreacion)
                    </div>

                    <div class="form-group">
                        <label>Usuario</label>
                        @Html.DropDownListFor(model => model.IdUsuario, (SelectList)ViewBag.VBUsuario)
                        @Html.ValidationMessageFor(model => model.IdUsuario)
                    </div>

                </div>
                @*<div class="containerDivGrey">
                        <input type="submit" value="Guardar" class="btnCreate" /> |
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
                    </div>*@

                <div class="panel-footer" style="text-align:right;">
                    <input type="submit" value="Guardar" class="btn btn-default" /> |
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
}

